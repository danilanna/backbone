<div>

	<div class="row">
		<h1 class="col-md-4">Permissions</h1>
  		<a href="#/permission/edit" class="col-md-1 offset-md-7 btn btn-link link-action"><span class="oi oi-plus"></span></a>
	</div>
	
	<div class="row">
		<table class="table table-hover table-striped">
		  <thead>
		    <tr>
		      <th>Name</th>
		      <th>Description</th>
		      <th>Edit</th>
		      <th>Delete</th>
		    </tr>
		  </thead>
		  <tbody>
		  	{{#each values}}
			    <tr>
			      <td>{{this.name}}</td>
			      <td>{{this.description}}</td>
			      <td>
			      	<a href="#/permission/edit/{{this._id}}" class="btn btn-link link-action"><span class="oi oi-pencil"></span></a>
			      </td>
			      <td>
			      	<button type="button" class="btn btn-link link-action" id="delete" data-id="{{this._id}}" data-val="{{this.name}}" data-toggle="modal" data-target="#permimssionModal">
			      		<span class="oi oi-x"></span>
			      	</button>
			      </td>
			    </tr>
			{{/each}}
		  </tbody>
		</table>
	</div>

	<ul id="pagination" class="pagination-md justify-content-end"></ul>

</div>

{{> modalTemplate modalValues}}

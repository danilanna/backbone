<div>

	<form id="form">
	  	<div>

		  	<div class="form-group row">
		      <label for="api" class="col-sm-2 col-form-label">Api</label>
		      <div class="col-sm-10">
		      	<input type="text" class="form-control" id="api" placeholder="Api" value="{{service.api}}" required="true">
		      </div>
		    </div>

		    <div class="form-group row">
		      <label for="method" class="col-sm-2 col-form-label">Method</label>
		      <div class="col-sm-10">
		      	<input type="text" class="form-control" id="method" placeholder="Method" value="{{service.method}}" required="true">
		      </div>
		    </div>

		  	<div class="row form-group">
		  		<label class="col-sm-2 col-form-label">Permissions</label>
		  		<div class="col-sm-10">
					<ul class="list-group" id="permissions">
						{{#each permissions}}
						  	<li class="list-group-item d-flex justify-content-between align-items-center">
							    {{this.name}} - {{this.description}}
					    		<input type="checkbox" value="{{this._id}}" id="{{this._id}}">
						  	</li>
						{{/each}}
					</ul>
				</div>
			</div>

	  	</div>

	  	<div class="row">
	  		<button type="submit" class="btn btn-primary offset-md-11">Submit</button>
 		</div>

	</form>

</div>
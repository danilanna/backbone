<div>

	<form id="form">
	  	<div>

		  	<div class="form-group row">
		      <label for="name" class="col-sm-2 col-form-label">Name</label>
		      <div class="col-sm-10">
		      	<input type="text" class="form-control" id="name" placeholder="Name" value="{{user.name}}" required="true">
		      </div>
		    </div>

		    <div class="form-group row">
		      <label for="email" class="col-sm-2 col-form-label">Email</label>
		      <div class="col-sm-10">
		      	<input type="email" class="form-control" id="email" placeholder="Email" value="{{user.email}}" required="true">
		      </div>
		    </div>

		    <fieldset class="form-group">
			    <div class="row">
			      <legend class="col-form-label col-sm-2 pt-0">Admin</legend>
			      <div class="col-sm-10">
			        <div class="form-check">
			          	<input class="form-check-input" type="radio" id="yes" value="yes" name="adminRadio">
				  		<label class="form-check-label" for="yes">Yes</label>
			        </div>
			        <div class="form-check">
			          	<input class="form-check-input" type="radio" id="no" value="no" name="adminRadio">
				  		<label class="form-check-label" for="no">No</label>
			        </div>
			      </div>
			    </div>
		  	</fieldset>

		  	<div class="row form-group">
		  		<label class="col-sm-2 col-form-label">Permissions</label>
		  		<div class="col-sm-10">
					<ul class="list-group" id="permissions">
						{{#each permissions}}
						  	<li class="list-group-item d-flex justify-content-between align-items-center">
							    {{this.name}} - {{this.description}}
					    		<input type="checkbox" value="{{this._id}}" id="{{this._id}}">
						  	</li>
						{{/each}}
					</ul>
				</div>
			</div>

	  	</div>

	  	<div class="row">
	  		<button type="submit" class="btn btn-primary offset-md-11">Submit</button>
 		</div>

	</form>

</div>